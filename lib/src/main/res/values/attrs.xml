<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="src" format="reference" />
    <attr name="cutType">
        <enum name="line" value="0" />
        <enum name="arc" value="1" />
        <enum name="wave" value="2" />
    </attr>
    <attr name="cutAngle" format="integer" />
    <attr name="cutCount" format="integer" />

    <attr name="gradientType">
        <enum name="linear" value="0" />
        <enum name="radial" value="1" />
    </attr>
    <attr name="gradient_startColor" format="color" />
    <attr name="gradient_endColor" format="color" />
    <attr name="gradientAngle" format="integer" />

    <attr name="autoTint" format="boolean" />
    <attr name="tintColor" format="color" />
    <attr name="tintAlpha" format="integer" />


    <declare-styleable name="GlazyImageView">

        <attr name="src" />
        <attr name="cutType" />
        <attr name="cutAngle" />
        <attr name="cutCount" />

        <attr name="gradientType" />
        <attr name="gradient_startColor" />
        <attr name="gradient_endColor" />
        <attr name="gradientAngle" />

        <attr name="autoTint" />
        <attr name="tintColor" />
        <attr name="tintAlpha" />

    </declare-styleable>
</resources>